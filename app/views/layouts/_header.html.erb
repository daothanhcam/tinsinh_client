<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Bio system", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Help", help_path %></li>
        <% if user_signed_in? %>
          <% if current_user.is_admin? %>
            <li class="dropdown" >
              <a href="#"  class="dropdown-toggle" data-toggle="dropdown" >
                Admin Manage <b class="caret"></b>
              </a>
              <ul class="dropdown-menu" >
                <li><%= link_to "Users Manage", admin_users_path %></li>
              </ul>
            </li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <strong><%= current_user.email %></strong><b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "information", user_path(current_user) %></li>
              <li><%= link_to "Edit profile", edit_user_registration_path, class: "navbar-link" %></li>
              <li class="divider"></li>
              <li><%= link_to "Logout", destroy_user_session_path, method: :delete, class: "navbar-link" %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Login", new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
